@{ 
    ViewData["Title"] = "Inicio de Sesion";
}
@using tl2_tp10_2023_Kumbhal.ViewModels   
@model LoginViewModel

<h1 class = "text-center">@ViewData["Title"]</h1>
<form asp-controller="Logueo" asp-action="Login">
    <div class="form-group">
        <label for="NombreDeUsuario">Nombre de usuario</label>
        <input asp-for = "@Model.VMUsuario" class="form-control" id="NombreDeUsuario">
    </div>
    <div class="form-group">
        <label for="Contrasenia">Contraseña</label>
        <input type= "password" asp-for = "@Model.VMContrasenia" class="form-control" id="Contrasenia">
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>
</div>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}