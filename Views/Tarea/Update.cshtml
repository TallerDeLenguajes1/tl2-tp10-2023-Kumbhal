@{ 
    ViewData["Title"] = "Update Tarea";
}

@model Tarea

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="Update">
    <input hidden asp-for = "@Model.Id">
    <input hidden asp-for = "@Model.IdTablero">
    <input hidden asp-for = "@Model.IdUsuarioAsignado">
    <div class="form-group">
        <label for="nombre">Nombre de la tarea</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="nombre" required>
    </div>
    <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="description">
    </div>
    <div class="form-group">
        <label for="color">Color</label>
        <input asp-for = "@Model.Color" class="form-control" id="color">
    </div>
    <div> 
        <select asp-for="Estado" class="form-control">
        <option value="">Seleccione un estado</option>
            @foreach (var estado in Enum.GetValues(typeof(EstadoTarea)))
            {
                <option value="@((int)estado)">@estado.ToString()</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>