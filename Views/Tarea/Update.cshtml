@{ 
    ViewData["Title"] = "Update Tarea";
}

@model Tarea

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="Update">
    <input hidden asp-for = "@Model.Id">
    <div class="form-group">
        <label for="nombre">Nombre de la tarea</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="nombre" required>
    </div>
    <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="description">
    </div>
    <div class="form-group">
        <label for="color">Color</label>
        <input asp-for = "@Model.Color" class="form-control" id="color">
    </div>
    <div class="form-group">
        <label for="state">Estado (0: Idea, 1: ToDo, 2: Doing, 3:Review, 4: Done)</label>
        <input asp-for = "@Model.Estado" class="form-control" id="state">
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>