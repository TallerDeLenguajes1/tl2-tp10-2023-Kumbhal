@{ 
    ViewData["Title"] = "Create Tarea";
}

@model Tarea

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="Create">
    <div class="form-group">
        <label for="nombre">Nombre de la tarea</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="nombre" required>
    </div>
    <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="descripcion">
    </div>
    <div class="form-group">
        <label for="color">Color</label>
        <input asp-for = "@Model.Color" class="form-control" id="color">
    </div>
    <div class="form-group">
        <label for="idTablero">ID del tablero al que pertenece</label>
        <input asp-for = "@Model.IdTablero" class="form-control" id="idTablero">
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}