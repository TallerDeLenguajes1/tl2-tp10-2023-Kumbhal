@{ 
    ViewData["Title"] = "Update Tablero";
}

@model Tablero

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="Update">
    <input hidden asp-for = "@Model.Id">
    <div class="form-group">
        <label for="Nombre">Nuevo nombre del tablero</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="Nombre">
    </div>
    <div class="form-group">
        <label for="Nombre">Nueva descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="Nombre">
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>