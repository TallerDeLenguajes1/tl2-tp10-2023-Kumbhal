@{ 
    ViewData["Title"] = "Update Tablero";
}
@using tl2_tp10_2023_Kumbhal.ViewModels
@model ModificarTableroViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="Update">
    <input hidden asp-for = "@Model.Id">
    <input hidden asp-for = "@Model.IdUsuarioPropietario">
    <div class="form-group">
        <label for="Nombre">Nuevo nombre del tablero</label>
        <input asp-for = "@Model.NombreTablero" class="form-control" id="Nombre">
    </div>
    <div class="form-group">
        <label for="Nombre">Nueva descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="Nombre">
    </div>
    @if((int)ViewContext.HttpContext.Session.GetInt32("Rol")! == 1){
        <div class="form-group">
        <label for="@Model.IdUsuarioPropietario">Usuario Propietario</label>
        <select class="form-select" asp-for="@Model.IdUsuarioPropietario">
        <option value="@null"></option>
        @foreach (var usu in Model.listadoUsuarios)
        {
        <option value="@usu.Id">@usu.NombreDeUsuario</option>
        }
        </select>
    </div>
    }
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>