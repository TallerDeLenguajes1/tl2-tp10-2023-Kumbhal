@{ 
    ViewData["Title"] = "Create Tablero";
}

@model Tablero

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="Create">
    <div class="form-group">
        <label for="Nombre">Nombre del tablero</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="Nombre" required>
    </div>
    <div class="form-group">
        <label for="description">Descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="descripcion">
    </div>
    <div class="form-group">
        <label for="IdUsuarioPropietario">ID del usuario al que pertenece</label>
        <input asp-for = "@Model.IdUsuarioPropietario" class="form-control" id="IdUsuarioPropietario">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>