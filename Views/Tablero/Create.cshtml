@{ 
    ViewData["Title"] = "Create Tablero";
}
@using tl2_tp10_2023_Kumbhal.ViewModels
@model CrearTablerosViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="Create">
    <div class="form-group">
        <label for="Nombre">Nombre del tablero</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="Nombre" required>
    </div>
    <div class="form-group">
        <label for="description">Descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="descripcion">
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario">Usuario Propietario</label>
        <select class="form-select" asp-for="@Model.IdUsuarioPropietario">
        <option value="@null"></option>
        @foreach (var usu in Model.ListaUsuarios)
        {
        <option value="@usu.Id">@usu.NombreDeUsuario</option>
        }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>